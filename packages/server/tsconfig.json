{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2024",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
