FROM node:18-alpine

WORKDIR /app

# 패키지 파일 먼저 복사
COPY package*.json ./

# 의존성 설치
RUN npm install

# Vite 개발 도구 전역 설치
RUN npm install -g vite

# 소스 코드 복사 (볼륨 마운트로 실시간 업데이트)
COPY . .

# 포트 노출
EXPOSE 5173

# Vite 개발 서버 실행
# --host 0.0.0.0: Docker 컨테이너에서 외부 접근 허용
# --port 5173: 명시적 포트 지정
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]