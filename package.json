{
  "name": "listenup",
  "version": "1.0.0",
  "private": true,
  "description": "실시간 멀티플레이어 음악 맞추기 게임",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/server & npm run dev --workspace=packages/client",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:server": "npm run dev --workspace=packages/server",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=packages/client",
    "build:server": "npm run build --workspace=packages/server",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist"
  },
  "keywords": [
    "music",
    "game",
    "multiplayer",
    "spotify"
  ],
  "author": "ListenUp! Team",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
